@import url("https://fonts.googleapis.com/css?family=Rubik:400,700&display=swap")

*
  box-sizing border box
  padding 0
  margin 0

body
  background hsl(0, 0%, 95%)
  color hsl(0, 0%, 10%)
  font-family "Rubik", sans-serif
  min-height 100vh
  display flex
  flex-direction column
  align-items center
  justify-content center

svg
  width 275px
  height auto
  display block

h1
  margin-top 0.75rem
  font-size 1.25rem
  max-width 250px
  text-align center