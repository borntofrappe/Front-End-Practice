- let duration = 1
- let squares = 8
svg(viewBox="-50 -50 100 100" width="100" height="100")
  defs
    rect(fill="currentColor" id="square" x="-9" y="-9" width="18" height="18")
  - for(let square = 0; square < squares; square += 1)
    - let angle = -45 + 360 / squares * square
    - let translateY = square % 2 === 0 ? (25 ** 2 + 25 ** 2) ** 0.5 * -1 : 25 * -1
    - let delay = -1 + duration / squares * square
    g(transform=`rotate(${angle}) translate(0 ${translateY}) rotate(${angle * -1})`)
      use(href="#square" style=`animation: scale-back ${duration}s cubic-bezier(0.39, 0.575, 0.565, 1) ${delay}s infinite`)
